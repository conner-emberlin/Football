        {
            case "QB": await GetQBSeasonData(); await GetQBWeeklyData(); break;
            case "RB": await GetRBSeasonData(); await GetRBWeeklyData(); break;
            case "WR": await GetWRSeasonData(); await GetWRWeeklyData(); break;
            case "TE": await GetTESeasonData(); await GetTEWeeklyData(); break;
            default: break;
        }
        await GetFantasySeasonData();
        await GetFantasyWeeklyData();
        await GetPlayerTeam();
        playerSelected = true;
        selectedPlayer = playerName;
        filteredPlayers = null;
        StateHasChanged();


@if (!string.IsNullOrWhiteSpace(Label))
{
    <label for="@Id">
        @Label
    </label>
}
<div class="input-group mb-3 ">
    <input type="text" class="form-control" placeholder="Draft Position..." id="@Id" value="@DraftPosition" @onchange="this.OnChange">
</div>

@code {
    [Parameter] public String DraftPosition { get; set; } = " ";
    [Parameter] public EventCallback<string> DraftPositionChanged { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Id { get; set; }
    [Parameter] public string? Placeholder { get; set; }

    private void OnChange(ChangeEventArgs e)
    {
        DraftPositionChanged.InvokeAsync(e.Value.ToString());
    }
}

